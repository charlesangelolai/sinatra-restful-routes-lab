<h2>Edit Recipe</h2>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    <label for="name">Name: </label>
    <input type="text" name="name" value="<%= @recipe.name %>" id="name">
  </div>
  <br>
  <div>
    <label for="ingredients">Ingredients: </label>
    <input type="text" name="ingredients" value="<%= @recipe.ingredients %>" id="ingredients">
  </div>
  <br>
  <div>
    <label for="cook_time">Cook Time: </label>
    <input type="text" name="cook_time" value="<%= @recipe.cook_time %>" id="cook_time">
  </div>
  <br>
  <input type="submit" value="Edit" id="submit">
</form>